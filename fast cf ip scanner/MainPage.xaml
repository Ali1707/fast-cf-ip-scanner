<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fast_cf_ip_scanner.MainPage"
             xmlns:viewmodel="clr-namespace:fast_cf_ip_scanner.ViewModels"
             x:DataType="viewmodel:MainPageViewModel"
             xmlns:model="clr-namespace:fast_cf_ip_scanner.Model">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button Text="start" 
                    
                    Command="{Binding GetValidIPsCommand}"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">
                
            </Button>
            <CollectionView ItemsSource="{Binding ValidIPs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:IPModel">
                        <VerticalStackLayout>
                            <Label Text="{Binding IP}"></Label>
                            <Label Text="{Binding Ping}"></Label>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
